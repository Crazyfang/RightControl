@model RightControl.Model.InforSearch.BlackList
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutForm.cshtml";
}

<div class="layui-col-md12 top10">
    <form class="layui-form" id="form" action="/InforSearch/BlackList/Edit" method="post">
        <input name="Id" value="@Model.Id" type="hidden">
        @Html.HiddenFor(x => x.CreateOn)
        <div class="layui-form-item">
            @Html.HiddenFor(item => item.CreateOn)
            @Html.HiddenFor(item => item.EditorId)
            <label class="layui-form-label">银行名称</label>
            <div class="layui-input-inline">
                <input name="BankName" value="@Model.BankName" lay-verify="required" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">其他说明</label>
            <div class="layui-input-block">
                <input name="OtherDescription" value="@Model.OtherDescription" lay-vertype="tips" class="layui-input" type="text">            
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">拉黑原因</label>
            <div class="layui-input-block">
                @Html.TextAreaFor(x => x.RefuseReason, new Dictionary<string, object> { { "class", "layui-textarea" }, { "lay-vertype", "tips" } })
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" lay-filter="submitForm" id="submitForm">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>
<script>
            layui.use(['form'], function () {
                var form = layui.form;
                var $ = layui.$;
                submitForm(form, "编辑成功"); //监听提交
            });
</script>

