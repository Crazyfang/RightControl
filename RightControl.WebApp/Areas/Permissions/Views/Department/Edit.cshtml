@model RightControl.Model.Permissions.DepartmentModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutForm.cshtml";
}
<div class="layui-col-md12 top10">
    <form class="layui-form" id="form" action="/Permissions/Department/Edit" method="post">
        <div class="layui-form-item">
            <label class="layui-form-label">上级部门</label>
            <div class="layui-input-inline">
                <input name="ParentName" lay-vertype="tips" class="layui-input" type="text" readonly="readonly" value="@ViewBag.ParentName">
                @Html.HiddenFor(item => item.ParentId)
                @Html.HiddenFor(item => item.Id)
            </div>
            <label class="layui-form-label">部门编号</label>
            <div class="layui-input-inline">
                @Html.TextBoxFor(item=>item.DepartmentCode, new Dictionary<string, object> { { "lay-vertype", "tips" },{"class", "layui-input"}, {"lay-verify", "required"} })
                @*<input name="DepartmentCode" lay-verify="required" lay-vertype="tips" class="layui-input" type="text">*@
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">部门名称</label>
            <div class="layui-input-inline">
                @Html.TextBoxFor(item=>item.DepartmentName, new Dictionary<string, object> { { "lay-vertype", "tips" },{"class", "layui-input"}, {"lay-verify", "required"} })
                @*<input name="DepartmentName" lay-vertype="tips" lay-verify="required" class="layui-input" type="text">*@
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">状态</label>
            <div class="layui-input-inline">
                @Html.StatusRadioHtml(Model.Status)
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" lay-filter="submitForm" id="submitForm">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>
<script>
            layui.use(['form'], function () {
                var form = layui.form;
                var $ = layui.$;
                submitForm_tree(form, "编辑成功"); //监听提交
            });
</script>
