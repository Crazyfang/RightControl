@model RightControl.Model.Insider.YG_InsiderList
<!DOCTYPE html>
<html>
<head>
    <title>关系图</title>
    <script src="~/Areas/Admin/Content/js/echarts.js"></script>
    <script src="~/Areas/Admin/Content/js/jquery-1.10.2.min.js"></script>
    <style>
        html, body {
            height: 100%;
        }
    </style>
</head>
<body>
    <div id="main" style="width:100%; height:100%"></div>
    <script type="text/javascript">
        var myChart = echarts.init(document.getElementById('main'));

        var categories = [];
        categories[0] = {
            name: '内部人'
        };
        categories[1] = {
            name: '近亲属'
        };

        var Post ='@Model.Post.Trim()';
        var RepartyNm ='@Model.RepartyNm.Trim()';
        var jsondata = eval('(' + '{"Post":"' + Post + '","RepartyNm":"' + RepartyNm+'"}' + ')');
        $.ajax({
            type: "post",
            url: "/Insider/InsiderList/GetRelationData",
            data: JSON.stringify(jsondata),
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                var jsondata = JSON.parse(result.data);
                var jsonlink = JSON.parse(result.link);

                myChart.setOption({
                    // 提示框的配置
                    tooltip: {
                        formatter: function (x) {
                            return x.data.des;
                        }
                    },

                    // 工具箱
                    toolbox: {
                        // 显示工具箱
                        show: true,
                        feature: {
                            mark: {
                                show: true
                            },

                            // 还原
                            restore: {
                                show: true
                            },

                            // 保存为图片
                            saveAsImage: {
                                show: true
                            }
                        }

                    },

                    legend: [{
                        data: categories.map(function (a) {
                            return a.name;
                        })
                    }],

                    series: [{
                        type: 'graph', // 类型:关系图
                        layout: 'force', //图的布局，类型为力导图
                        symbolSize: 50, // 调整节点的大小
                        roam: true, // 是否开启鼠标缩放和平移漫游。默认不开启。如果只想要开启缩放或者平移,可以设置成 'scale' 或者 'move'。设置成 true 为都开启
                        edgeSymbol: ['circle', 'arrow'],
                        edgeSymbolSize: [2, 10],
                        edgeLabel: {
                            normal: {
                                textStyle: {
                                    fontSize: 20
                                }
                            }
                        },
                        force: {
                            repulsion: 2000,   //斥力
                            edgeLength: [10, 50]
                        },
                        draggable: true,
                        lineStyle: {
                            normal: {
                                width: 2,
                                color: '#4b565b'
                            }
                        },
                        edgeLabel: {
                            normal: {
                                show: true,
                                formatter: function (x) {
                                    return x.data.name;
                                }
                            }
                        },
                        label: {
                            normal: {
                                show: true,
                                textStyle: {}
                            }
                        },
                        data: jsondata,
                        links: jsonlink,
                        categories: categories,
                    }]
                });
            },
            error: function (errorMsg) {
                alert("图表请求数据失败!");
                myChart.hideLoading();
            }
        });
    </script>
</body>
</html>
