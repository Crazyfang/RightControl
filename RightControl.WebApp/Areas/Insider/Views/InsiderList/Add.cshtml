@model RightControl.Model.Insider.YG_InsiderList
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutForm.cshtml";
}

@section styles{
    <link rel="stylesheet" href="~/Areas/Admin/plugins/layui/css/eleTree.css">
    <style>
        .nav {
            position: fixed;
            right: 25px;
            top: calc(50% - 90px);
            border: 1px solid #d2d2d2;
            background-color: #fff;
            z-index: 100000;
        }

        .nav-title {
            background-color: #F8F8F8;
            padding: 0 80px 0 20px;
            margin: 0px;
            height: 42px;
            line-height: 42px;
            border-bottom: 1px solid #eee;
        }

        .nav ul {
            padding: 10px 0px 10px 35px;
        }

            .nav ul li {
                padding: 5px 0px;
                list-style-type: decimal;
            }

            .nav ul a {
                color: #333;
                font-size: 14px;
                text-decoration: none;
            }

        .eleTree {
            width: 350px;
            height: auto;
            border: 1px solid #ccc;
            overflow-y: scroll;
            display: inline-block;
        }

        .inp {
            width: 100%;
            line-height: 30px;
        }

        .slideTest {
            margin: 0 10px;
        }

        .met {
            display: none;
            width: 100%;
        }

        .blue {
            color: #01AAED;
        }

        a:hover {
            color: #01AAED;
        }

        .ele {
            max-height: 150px;
            width: 100%;
            display: none;
            position: absolute;
            top: 100%;
            background-color: #fff;
            z-index: 100;
        }
    </style>
}

<div class="layui-col-md12 top10">
    <form class="layui-form" id="form" action="/Insider/InsiderList/Add" method="post">
        <div class="layui-form-item">
            <label class="layui-form-label">关联方名称</label>
            <div class="layui-input-inline">
                <input name="RepartyNm" lay-verify="required" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">关联性质</label>
            <div class="layui-input-inline">
                <input name="ReNature" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">支行/部门</label>
            <div class="layui-input-inline">
                <input type="hidden" name="DepartmentId" class="layui-input">
                <input type="text" name="Department" required lay-verify="required" readonly autocomplete="off" class="layui-input">
                <div class="eleTree ele" lay-filter="departmentdata"></div>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">工作岗位</label>
            <div class="layui-input-inline">
                <input name="Post" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">身份证号码</label>
            <div class="layui-input-inline">
                <input name="IdentityCd" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" lay-filter="submitForm" id="submitForm">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>

<script>
    layui.use(['jquery', 'eleTree', 'form'], function () {
        var form = layui.form;
        var $ = layui.jquery;
        submitForm(form, "添加成功"); //监听提交

        var eleTree = layui.eleTree;
        var el;
        $.ajax({
            url: '/Permissions/Department/GetAllDepartment',
            type: 'post',
            dataType: 'json',
            success: function (data) {
                el = eleTree.render({
                    elem: '.ele',
                    data: data,
                    defaultExpandAll: true,
                    expandOnClickNode: false,
                    highlightCurrent: true
                });
            }
        });
        $("[name='Department']").on("click",
            function (e) {
                e.stopPropagation();
                if (!el) {
                    //el = eleTree.render({
                    //    elem: '.ele',
                    //    data: data,
                    //    defaultExpandAll: true,
                    //    expandOnClickNode: false,
                    //    highlightCurrent: true
                    //});
                }
                $(".ele").toggle();
            });
        eleTree.on("nodeClick(departmentdata)",
            function (d) {
                $("[name='Department']").val(d.data.currentData.label);
                $("[name='DepartmentId']").val(d.data.currentData.id);
                $(".ele").hide();
            });
        $(document).on("click",
            function () {
                $(".ele").hide();
            });
    });
</script>

