
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>认领企业列表</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/Areas/Admin/plugins/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/admin.css" rel="stylesheet" />
</head>
<body style="background-color: white;">
    <div class="layui-fluid">
        <div class="layui-row layui-col-space15">
            <div class="layui-col-md12">
                <div class="layui-collapse">
                    @Html.Raw(ViewBag.html)
                </div>
            </div>
        </div>
    </div>
    <script src="~/Areas/Admin/plugins/layui/layui.js"></script>
    <script>
        layui.use(['table', 'layer', 'form', 'element'], function () {
            var table = layui.table,
                layer = layui.layer,
                $ = layui.$,
                element = layui.element,
                form = layui.form;

            $('button').each(function () {
                var value = $(this).next().val();
                $(this).click(function () {
                    layer.open({
                        type: 2
                        , title: '走访确认'
                        , content: '/CreditSearch/CreditCompany/ResultVisit?creditCompanyId=' + value
                        , shadeClose: true
                        , area: ['700px', '500px']
                        , maxmin: true
                        , end: function () {
                            window.location.reload();
                        }
                    });
                });
            });
        });</script>
</body>
</html>
