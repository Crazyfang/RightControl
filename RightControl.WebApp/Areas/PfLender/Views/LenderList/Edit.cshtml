@model RightControl.Model.PfLender.LenderList
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutForm.cshtml";
}

<div class="layui-col-md12 top10">
    <form class="layui-form" id="form" action="/PfLender/LenderList/Edit" method="post">
        <input name="Id" value="@Model.Id" type="hidden">
        @Html.HiddenFor(x => x.CreateOn)
        <div class="layui-form-item">
            @Html.HiddenFor(item => item.CreateOn)
            <label class="layui-form-label">姓名</label>
            <div class="layui-input-inline">
                <input name="Name" value="@Model.Name" lay-verify="required" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">身份证</label>
            <div class="layui-input-inline">
                <input name="IdentityCd" value="@Model.IdentityCd" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">户籍地</label>
            <div class="layui-input-block">
                <input name="Place" value="@Model.Place" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">近三年案件数量</label>
            <div class="layui-input-inline">
                <input name="LawCase" value="@Model.LawCase" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">标的额(万元)</label>
            <div class="layui-input-inline">
                <input name="Amount" value="@Model.Amount" lay-vertype="tips" class="layui-input" type="text">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit="" lay-filter="submitForm" id="submitForm">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>

<script>
    layui.use(['form'], function () {
        var form = layui.form;
        var $ = layui.$;
        submitForm(form, "编辑成功"); //监听提交
    });
</script>

